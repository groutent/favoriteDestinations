<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/destination_image"
        android:layout_width="126dp"
        android:layout_height="115dp"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/destination_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toEndOf="@+id/destination_image"
        app:layout_constraintTop_toTopOf="@+id/destination_image" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="@android:style/Widget.Material.Light.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="2"
        android:stepSize="0.5"
        app:layout_constraintBottom_toBottomOf="@+id/destination_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/destination_name"
        app:layout_constraintTop_toTopOf="@+id/destination_name" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="243dp"
        android:layout_height="83dp"
        app:layout_constraintStart_toStartOf="@+id/destination_name"
        app:layout_constraintTop_toBottomOf="@+id/destination_name">

        <TableRow>

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="4"
                android:maxLines="4"
                android:minLines="1"
                android:text="TextView" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>